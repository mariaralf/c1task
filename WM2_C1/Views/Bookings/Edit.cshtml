@model WM2_C1.Booking

@{
    ViewData["Title"] = "Edit";
}

<h1>Редагування</h1>

<h4>Бронювання</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookingId" />
            <div class="form-group">
                <label asp-for="BookingUserId" class="control-label"></label>
                <select asp-for="BookingUserId" class="form-control" asp-items="ViewBag.BookingUserId"></select>
                <span asp-validation-for="BookingUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingHotelId" class="control-label"></label>
                <select asp-for="BookingHotelId" class="form-control" asp-items="ViewBag.BookingHotelId"></select>
                <span asp-validation-for="BookingHotelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" class="form-control" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутись до переліку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
