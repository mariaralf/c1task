@model WM2_C1.User

@{
    ViewData["Title"] = "Details";
}

<h1>Деталі</h1>

<div>
    <h4>Користувач</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserSurname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserSurname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserPhone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserPhone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserRoleNavigation)
        </dt>
        <dd class = "col-sm-10">
            <a asp-action="Details" asp-controller="Users" asp-route-id="@Model.UserRoleNavigation.RoleId"> 
            @Html.DisplayFor(model => model.UserRoleNavigation.RoleName)
            </a>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.UserId">Редагувати</a> |
    <a asp-action="Index">Повернутись до переліку</a>
</div>
